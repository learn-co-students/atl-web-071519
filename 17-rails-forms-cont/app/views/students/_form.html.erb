<% if @student.errors.present? %>
  <p><b>Validation Error!</b> Could not save your student.</p>
  <ul>
  <% @student.errors.full_messages.each do |msg| %>
    <li style="color: red;"><%= msg %></li>
  <% end %>
  </ul>
<% end %>

<%= form_for(@student) do |f| %>
  <%= f.text_field(:name) %>
  <%= f.collection_select(:cohort_id, Cohort.all, :id, :name) %>
  <%= f.submit %>
<% end %>

<%= link_to("All students", students_path) %>
