<h1>Login</h1>

<% if @error %>
  <p style="font-weight: bold"><%= @error %></p>
<% end %>

<%= form_tag do %>
  <%= label_tag("Username: ") %>
  <%= text_field_tag(:username) %>
  <%= label_tag("Password: ") %>
  <%= password_field_tag(:password) %>
  <%= submit_tag("Login") %>
<% end %>

<%= link_to("Homepage", root_path) %>